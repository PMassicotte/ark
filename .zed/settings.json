{
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "rustfmt": {
                    "extraArgs": ["+nightly"]
                }
            }
        }
    },
    "languages": {
        "Rust": {
            "format_on_save": "on"
        },
        "R": {
            "hard_tabs": false,
            "tab_size": 4,
            "format_on_save": "on",
            "formatter": "language_server",
            "language_servers": ["air"]
        }
    }
}
